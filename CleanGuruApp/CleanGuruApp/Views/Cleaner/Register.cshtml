@model Cleaner

@{
    ViewData["Title"] = "Register";
}

<h2>  Registration  </h2>
<div asp-validation-summary="All" class="validation-summary-errors"></div>
<form class="form defaultForm" style="width:80%" asp-action="Register" asp-controller="Cleaner" method="post">

    <div class="form-group">
        <label asp-for="FCleanerName">First Name</label>
        <input type="text" class="form-control" asp-for="FCleanerName" />
    </div>

    <div class="form-group">
        <label asp-for="MCleanerName">Middle Name (optional)</label>
        <input type="text" class="form-control" asp-for="MCleanerName" />
    </div>

    <div class="form-group">
        <label asp-for="LCleanerName">Last Name</label>
        <input type="text" class="form-control" asp-for="LCleanerName" />
    </div>

    <div class="form-group">
        <label asp-for="ClAddress">Address</label>
        <input type="text" class="form-control" asp-for="ClAddress" />
    </div>

    <div class="form-group">
        <label asp-for="ClAddressUnit">Address Unit</label>
        <input type="text" class="form-control" asp-for="ClAddressUnit" />
    </div>

    <div class="form-group">
        <label asp-for="ClPostalCode">Postal Code</label>
        <input type="text" class="form-control" asp-for="ClPostalCode" />
    </div>

    <div class="form-group">
        <label asp-for="ClCity">City</label>
        <input type="text" class="form-control" asp-for="ClCity" />
    </div>

    <div class="form-group">
        <label asp-for="ClProvince">Province</label>
        <input type="text" class="form-control" asp-for="ClProvince" />
    </div>

    <div class="form-group">
        <label asp-for="ClPhone1">Phone Number</label>
        <input type="number" class="form-control" asp-for="ClPhone1" />
    </div>

    <div class="form-group">
        <label asp-for="ClPhone2">Additional Phone Number (optional)</label>
        <input type="number" class="form-control" asp-for="ClPhone2" />
    </div>

    <div class="form-group">
        <label asp-for="ClSinNumber">Sin Number</label>
        <input type="text" class="form-control" asp-for="ClSinNumber" />
    </div>

    <div class="form-group">
        <label asp-for="UserName">Email</label>
        <input type="email" class="form-control" asp-for="UserName" />
    </div>

    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input type="password" class="form-control" asp-for="Password" />
    </div>

    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Register</button>
    <button class="btn btn-danger" asp-controller="Home" asp-action="Index">Cancel</button>
</form>



