@model UserLogin

@{
    ViewData["Title"] = "CreateAppointment";
}

<h2>Create User</h2>


<div asp-validation-summary="All" class="validation-summary-errors"></div>

<form asp-controller="UserLogin" asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="UserName">User Name</label>
        <input type="text" class="form-control" asp-for="UserName"/>
    </div>
    <div class="form-group">
        <label asp-for="Pin">Password</label>
        <input type="text" class="form-control" asp-for="Pin"/>
    </div>

    <div>
        <select asp-for="Role">          @*May not have asp-for="Role"*@
            <option value="CUSTOMER" asp-for="Role">Customer</option>
            <option value="CLEANER" asp-for="Role">Cleaner</option>
        </select>
    </div>

    <div>
        <a asp-controller="UserLogin" asp-action="List">List of User in SeedData</a>
    </div>
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Create User</button>

    @*<button class="btn btn-outline-success my-2 my-sm-0" type="submit" asp-controller="Appointment" asp-action="SaveAppontment">Create Appointment</button>*@
    <button class="btn btn-danger" asp-controller="Home" asp-action="Index">Cancel</button>
    <div>
        <a asp-controller="Home" asp-action="Register">Don't have an account? Sign Up Free!!</a>
    </div>
  
</form>
