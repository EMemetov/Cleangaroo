<!DOCTYPE html>

<html>
<head>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/Styles.css" type="text/css">

</head>
<body>
    <div class="alpageMargin">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary" style="background-color:#0099ff;">
            <a class="navbar-brand"asp-controller="Home" asp-action="Index" style="margin:10px">CleanGuru</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent" style="font-size:16px">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                    </li>
                    

                    <li class="nav-item active">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                Service
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li class="nav-item active">
                                    <a class="nav-link " style="color: black" asp-controller="ServicePrices" asp-action="index" tabindex="-1">Cost Service</a>
                                </li>
                                <li class="nav-item active">
                                    <a class="nav-link " style="color: black" asp-controller="Appointment" asp-action="CreateAppointment" tabindex="-1">Service</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item active">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                Customer
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li class="nav-item active">
                                    <a class="nav-link " style="color: black" asp-controller="Appointment" asp-action="FutureAppointment"
                                       asp-route-typeUser="Cu" tabindex="-1">Future Appointments</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item active">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                Cleaner
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li class="nav-item active">
                                    <a class="nav-link " style="color: black;" asp-controller="Appointment" asp-action="CleanerAppointment" tabindex="-1">Cleaner Appointments</a>
                                </li>
                                <li class="nav-item active">
                                    <a class="nav-link " style="color: black;" asp-controller="Appointment" asp-action="FutureAppointment"
                                       asp-route--typeUser="Cl" tabindex="-1">Future Appointments</a>
                                </li>
                                <li class="nav-item active">
                                    <a class="nav-link " style="color: black;" asp-controller="ScheduleCleaners" asp-action="index" tabindex="-1">Cleaner's Availability</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item active">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                Manager
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li class="nav-item active">
                                    <a class="nav-link " style="color: black;" asp-controller="Customer" asp-action="ListOfCustomers" tabindex="-1">Registered Customers</a>
                     
                                </li>
                                <li class="nav-item active">

                                    <a class="nav-link "style="color: black;"  asp-controller="Cleaner" asp-action="ListOfCleaners" tabindex="-1">Registered Cleaners</a>
                                </li>
                               
                            </ul>
                        </div>
                    </li>
                    
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <button class="btn btn-outline-light my-2 my-sm-0 btn-lg" asp-controller="Customer" asp-action="Register" type="submit">Register</button>
                </form>

            </div>
        </nav>
        <div id="header">

        </div>
        <div id="container" style="margin: 60px;">
            <div id="text-block">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-success">@TempData["message"]</div>
                }
                @RenderBody()
            </div>
        </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</body>
</html>



